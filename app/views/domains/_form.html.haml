= form_for @domain do |f|
  -if @domain.errors.any?
    .error
      %p= "#{pluralize(@domain.errors.count, "error")} stopped this domain from being saved:"
      %ul
        - @domain.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend= t('.details')
    %ul
      %li
        = f.label :name
        = f.text_field :name
        %span.hint= t('.hints.name')
      %li
        = f.label :active
        = f.check_box :active
        %span.hint= t('.hints.active')
      - if can? :manage, Account
        %li
          = f.label :account
          = collection_select(:domain, :account_id, Account.all, :id, :name)

  - if can? :manage, Domain
    %fieldset
      %legend= t('.activation')
      %ul
        %li
          = f.label :email_active
          = f.check_box :email_active
        %li
          = f.label :ftp_active
          = f.check_box :ftp_active

    %fieldset
      %legend= t('.email')
      %ul
        %li
          = f.label :email_quota
          = f.text_field :email_quota
          %span.hint= t('.hints.email_quota')
        %li
          = f.label :email_alias
          %select{:name => 'domain[email_alias]'}
            %option{:value => ''}
            - @account.domains.each do |domain|
              - unless domain.new? or !can?(:read, domain) or domain == @domain or domain.email_alias
                %option{:value => domain.name, :selected => (@domain.email_alias == domain.name) && 'selected'}= domain.name
          %span.hint= t('.hints.email_alias', :domain => @domain.name)

  - if @domain.ftp_active
    %fieldset
      %legend= t('.ftp')
      %ul
        %li
          = f.label :passhash
          = f.password_field :passhash
          %span.hint= t('.hints.passhash')
        %li
          = f.label :ftp_quota
          = f.text_field :ftp_quota
          %span.hint= t('.hints.ftp_quota')
  %fieldset.actions
    = f.submit t('actions.save')
    \|
    = link_to t('actions.back'), domains_path
