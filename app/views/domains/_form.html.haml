= form_for @domain do |f|
  -if @domain.errors.any?
    #error_explanation
      %h2= "#{pluralize(@domain.errors.count, "error")} prohibited this domain from being saved:"
      %ul
        - @domain.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %ul
      %li
        = f.label :name
        = f.text_field :name
      %li
        = f.label :active
        = f.check_box :active
  %fieldset.actions
    = f.submit 'Save'
