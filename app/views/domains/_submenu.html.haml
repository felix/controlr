%h3= t('.title')
%ul
  %li= link_to t('.list'), domains_path, :class => 'list button'
  - if @domain && !@domain.new? && can?(:create, Email)
    %li= link_to t('mailboxes.submenu.new'), new_mailbox_path, :class => 'add button'
  - if can? :create, Domain
    %li= link_to t('.new'), new_domain_path, :class => 'add button'

