!!!5
%html
  %head
    %meta{:name => 'charset', :value => 'utf-8'}/
    %title Controlr
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'screen'
    /%script{:src => 'http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js'}
    = javascript_include_tag :defaults
    = csrf_meta_tag
    %meta{:content => '', :name => 'description'}/
    /[if lt IE 9]
      %script{:src => 'http://html5shiv.googlecode.com/svn/trunk/html5.js'}
  %body{:class => controller.controller_path}
    %header.page
      .account
        = render :partial => 'users/account_small'
      %hgroup
        %h1 Controlr

      %nav
        %ul
          %li.dashboard= link_to t('dashboard.tab'), root_path
          - if can? :read, User
            %li.users= link_to t('users.tab'), users_path
          %li.domains= link_to t('domains.tab'), domains_path
          - if @domain && !@domain.new?
            %li.aliases= link_to t('aliases.tab'), domain_aliases_path(@domain)
            %li.mailboxes= link_to t('mailboxes.tab'), domain_mailboxes_path(@domain)

    #page
      %section
        - unless flash.empty?
          .flash
            %ul
              - flash.each do |t,m|
                %li{:class => t}= m

        = yield
      #sidebar
        %nav
          = render :partial => 'submenu'
    %footer.page
      %p 
        &copy;
        = Time.now.year
        Felix Hanley
