%ul
  - if can? :manage, Account
    = create_tab t('accounts.tab'), accounts_path
  - else
    = create_tab t('accounts.dashboard'), root_path
  - if can? :manage, User
    = create_tab t('users.tab'), users_path
  - if can? :read, Domain
    = create_tab t('domains.tab'), domains_path
  - if can? :edit, Account
    = create_tab t('default_name_records.tab'), default_name_records_path
    = create_tab t('default_aliases.tab'), default_aliases_path
