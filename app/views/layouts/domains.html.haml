- content_for :sidebar do
  %h3= t('.title')
  %nav
    %ul
      - if @domain && !@domain.new? && can?(:create, Mailbox)
        %li= link_to t('.edit'), edit_domain_path(@domain), :class => 'edit button'
        %li= link_to t('layouts.mailboxes.new'), new_mailbox_path, :class => 'add button'
      - if can? :create, Domain
        %li= link_to t('.new'), new_domain_path, :class => 'add button'
      %li= link_to t('.list'), domains_path, :class => 'list button'
= render :file => 'layouts/application'
