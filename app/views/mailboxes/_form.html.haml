= form_for @mailbox do |f|
  -if @mailbox.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mailbox.errors.count, "error")} prohibited this mailbox address from being saved:"
      %ul
        - @mailbox.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend= t('.details')
    %ul
      %li
        = f.label :email
        = f.text_field :email, :value => @mailbox.email
        %span.hint= t('.hints.email')
      %li
        = f.label :active
        = f.check_box :active
      %li
        = f.label :passhash
        = f.password_field :passhash
        %span.hint= t('.hints.passhash')
      %li
        = f.label :quota
        = f.text_field :quota
        %span.hint= t('.hints.quota')

  %fieldset.actions
    = f.submit t('actions.save')
    \|
    = link_to t('actions.back'), mailboxes_path
