%fieldset
  %ul
    %li
      = f.label :roles
      %ul.field
        - Role.all.each do |role|
          - if role.name == 'super' && !current_user.has_role?(:super) then next
          %li
            = check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role)
            = role.description
      = hidden_field_tag "user[role_ids][]", ""
